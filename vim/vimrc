set clipboard=unnamed

" 背景色設定
set background=dark

" 行番号（相対番号）
set number
set relativenumber
set numberwidth=4

" カーソルライン表示
set cursorline

" True Color有効化
set termguicolors

" 構文ハイライト有効化
syntax enable

" ========================================
" カーソル形状変更（モード別）
" ========================================
let &t_SI = "\e[5 q"  " Insert: 点滅バー
let &t_EI = "\e[1 q"  " Normal: ブロック
let &t_SR = "\e[3 q"  " Replace: 下線

" ========================================
" Abyssal Teal カラースキーム（TOML準拠）
